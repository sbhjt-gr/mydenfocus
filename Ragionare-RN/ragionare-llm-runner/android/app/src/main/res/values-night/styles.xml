<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Dark theme application theme -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here -->
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:editTextStyle">@style/Widget.AppCompat.EditText</item>
        <item name="android:buttonStyle">@style/Widget.AppCompat.Button</item>
        <item name="colorPrimary">#4a0660</item>
        <item name="colorPrimaryDark">#4a0660</item>
        <item name="colorAccent">#4a0660</item>
        <item name="android:windowBackground">#1E1326</item>
        <item name="android:forceDarkAllowed">true</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:statusBarColor">#4a0660</item>
        <item name="android:navigationBarColor">#660880</item>
        <item name="android:windowTranslucentStatus">false</item>
        <item name="android:windowTranslucentNavigation">false</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>
</resources> 